<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AddPlayerTeamBController">
    <VBox alignment="CENTER" layoutX="20" layoutY="20" spacing="20" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2f4f4f;" text="Add Player to Away Team" />
        <ListView fx:id="teamBListView" prefHeight="400.0" style="-fx-border-color: #8b0000; -fx-border-width: 2px;">
         <VBox.margin>
            <Insets left="250.0" right="250.0" />
         </VBox.margin></ListView>
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="teamBPlayerNameField" promptText="Enter player name" style="-fx-font-size: 14px;" />
            <TextField fx:id="teamBPlayerNumberField" promptText="Enter jersey number" style="-fx-font-size: 14px;" />
            <Button fx:id="teamBAddPlayerButton" style="-fx-background-color: #8b0000; -fx-text-fill: white; -fx-font-size: 14px;" text="Add" />
        </HBox>
        <Button fx:id="saveButton" style="-fx-background-color: #32cd32; -fx-text-fill: white; -fx-font-size: 16px;" text="Save" />
    </VBox>
</AnchorPane>
