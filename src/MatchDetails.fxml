<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MatchDetailsController">
    <VBox alignment="CENTER" spacing="20" layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="910.0">
        <Label fx:id="teamALabel" text="Team A" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4682b4;" />
        <TableView fx:id="teamATableView" prefHeight="250.0" prefWidth="850.0">
            <columns>
                <TableColumn fx:id="playerNameAColumn" text="Player Name" prefWidth="120.0" />
                <TableColumn fx:id="shotsAColumn" text="Shots" prefWidth="60.0" />
                <TableColumn fx:id="missedShotsAColumn" text="Missed Shots" prefWidth="80.0" />
                <TableColumn fx:id="accuracyAColumn" text="Accuracy (%)" prefWidth="80.0" />
                <TableColumn fx:id="ballLossesAColumn" text="Ball Losses" prefWidth="80.0" />
                <TableColumn fx:id="foulsAColumn" text="Fouls" prefWidth="60.0" />
                <TableColumn fx:id="yellowCardsAColumn" text="Yellow Cards" prefWidth="80.0" />
                <TableColumn fx:id="redCardsAColumn" text="Red Cards" prefWidth="80.0" />
            </columns>
        </TableView>
        
        <Label fx:id="teamBLabel" text="Team B" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #8b0000;" />
        <TableView fx:id="teamBTableView" prefHeight="250.0" prefWidth="850.0">
            <columns>
                <TableColumn fx:id="playerNameBColumn" text="Player Name" prefWidth="120.0" />
                <TableColumn fx:id="shotsBColumn" text="Shots" prefWidth="60.0" />
                <TableColumn fx:id="missedShotsBColumn" text="Missed Shots" prefWidth="80.0" />
                <TableColumn fx:id="accuracyBColumn" text="Accuracy (%)" prefWidth="80.0" />
                <TableColumn fx:id="ballLossesBColumn" text="Ball Losses" prefWidth="80.0" />
                <TableColumn fx:id="foulsBColumn" text="Fouls" prefWidth="60.0" />
                <TableColumn fx:id="yellowCardsBColumn" text="Yellow Cards" prefWidth="80.0" />
                <TableColumn fx:id="redCardsBColumn" text="Red Cards" prefWidth="80.0" />
            </columns>
        </TableView>
        <Button fx:id="shotChartButton" text="Shot Chart" onAction="#showShotChart" style="-fx-background-color: #32cd32; -fx-text-fill: white; -fx-font-size: 16px;" />
    </VBox>
</AnchorPane>
