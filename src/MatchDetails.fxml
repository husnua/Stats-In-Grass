<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="950.0" style="-fx-background-color: #f0f8ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MatchDetailsController">
    <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="910.0" spacing="20">
        <Label fx:id="teamALabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4682b4;" text="Team A" />
        <TableView fx:id="teamATableView" prefHeight="250.0" prefWidth="850.0">
            <columns>
                <TableColumn fx:id="playerNameAColumn" prefWidth="120.0" text="Player Name" />
                <TableColumn fx:id="shotsAColumn" prefWidth="60.0" text="Shots" />
                <TableColumn fx:id="missedShotsAColumn" prefWidth="80.0" text="Missed Shots" />
                <TableColumn fx:id="accuracyAColumn" prefWidth="80.0" text="Accuracy (%)" />
                <TableColumn fx:id="ballLossesAColumn" prefWidth="80.0" text="Ball Losses" />
                <TableColumn fx:id="foulsAColumn" prefWidth="60.0" text="Fouls" />
                <TableColumn fx:id="yellowCardsAColumn" prefWidth="80.0" text="Yellow Cards" />
                <TableColumn fx:id="redCardsAColumn" prefWidth="80.0" text="Red Cards" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        
        <Label fx:id="teamBLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #8b0000;" text="Team B" />
        <TableView fx:id="teamBTableView" prefHeight="250.0" prefWidth="850.0">
            <columns>
                <TableColumn fx:id="playerNameBColumn" prefWidth="120.0" text="Player Name" />
                <TableColumn fx:id="shotsBColumn" prefWidth="60.0" text="Shots" />
                <TableColumn fx:id="missedShotsBColumn" prefWidth="80.0" text="Missed Shots" />
                <TableColumn fx:id="accuracyBColumn" prefWidth="80.0" text="Accuracy (%)" />
                <TableColumn fx:id="ballLossesBColumn" prefWidth="80.0" text="Ball Losses" />
                <TableColumn fx:id="foulsBColumn" prefWidth="60.0" text="Fouls" />
                <TableColumn fx:id="yellowCardsBColumn" prefWidth="80.0" text="Yellow Cards" />
                <TableColumn fx:id="redCardsBColumn" prefWidth="80.0" text="Red Cards" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
    </VBox>
</AnchorPane>
